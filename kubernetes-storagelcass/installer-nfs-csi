https://github.com/kubernetes-csi/csi-driver-nfs/blob/master/docs/install-csi-driver-v4.0.0.md

curl -skSL https://raw.githubusercontent.com/kubernetes-csi/csi-driver-nfs/v4.0.0/deploy/install-driver.sh | bash -s v4.0.0 --



---
apiVersion: storage.k8s.io/v1
kind: StorageClass
metadata:
  name: nfs-storage-data
provisioner: nfs.csi.k8s.io
parameters:
  server: 172.31.11.245
  share: /datapath
reclaimPolicy: Delete
volumeBindingMode: Immediate
allowVolumeExpansion: true
mountOptions:
  - nfsvers=4.1